{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "userId": { "type": "string" },
    "githubUsername": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "roles": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["guest", "author", "reviewer", "editor"]
        }
      }
    },
    "activeSubmissionId": { "type": "string", "default": null },
    "submissionCount": { "type": "integer", "default": 0 },
    "lastSubmissionTime": { "type": "string", "format": "date-time" },
    "reviewCount": { "type": "integer", "default": 0 },
    "reputationScore": { "type": "number", "default": 5.0 },
    "withdrawalHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "submissionId": { "type": "string" },
          "withdrawnAt": { "type": "string", "format": "date-time" },
          "reason": { "type": "string" }
        }
      }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["userId", "githubUsername", "roles"]
}
